{
  "installation": {
    "version": "22.5.2"
  },
  "namedInputs": {
    "default": [
      "{projectRoot}/**/*",
      "sharedGlobals"
    ],
    "production": [
      "default",
      "!{projectRoot}/test/**/*",
      "!{projectRoot}/**/*.spec.ts",
      "!{projectRoot}/**/*.test.dart",
      "!{projectRoot}/docs/**/*"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/Taskfile.yml",
      "{workspaceRoot}/.taskfiles/**/*",
      "{workspaceRoot}/Taskfile.Levels.yml",
      "{workspaceRoot}/Taskfile.Release.yml"
    ]
  },
  "targetDefaults": {
    "build": {
      "cache": true,
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "production",
        "^production"
      ]
    },
    "test": {
      "cache": true,
      "inputs": [
        "default",
        "^default"
      ]
    },
    "lint": {
      "cache": true,
      "inputs": [
        "default",
        "^default"
      ]
    },
    "validate": {
      "cache": true,
      "dependsOn": [
        "lint",
        "test",
        "build"
      ]
    },
    "deploy": {
      "cache": true,
      "dependsOn": [
        "build"
      ]
    }
  },
  "release": {
    "version": {
      "generatorOptions": {
        "currentVersionResolver": "disk",
        "specifierSource": "conventional-commits"
      }
    },
    "groups": {
      "parable-bloom": {
        "projects": [
          "parable-bloom"
        ],
        "releaseTagPattern": "v{version}",
        "version": {
          "generatorOptions": {
            "currentVersionResolver": "disk"
          },
          "hooks": {
            "postVersion": "dart run scripts/bump_version.dart --set {newVersion} --no-commit --no-changelog"
          }
        },
        "changelog": {
          "automaticFromRef": true
        }
      },
      "hugo-site": {
        "projects": [
          "hugo-site"
        ],
        "releaseTagPattern": "hugo-site-v{version}",
        "version": {
          "generatorOptions": {
            "currentVersionResolver": "disk"
          }
        },
        "changelog": {
          "automaticFromRef": true
        }
      },
      "level-builder": {
        "projects": [
          "level-builder"
        ],
        "releaseTagPattern": "level-builder-v{version}",
        "version": {
          "generatorOptions": {
            "currentVersionResolver": "disk"
          }
        },
        "changelog": {
          "automaticFromRef": true
        }
      }
    },
    "changelog": {
      "automaticFromRef": true,
      "projectChangelogs": {
        "renderOptions": {
          "authors": true,
          "mapAuthorsToGithubUsernames": true
        }
      }
    }
  },
  "$schema": "./node_modules/nx/schemas/nx-schema.json"
}
