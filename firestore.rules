rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Game progress data - users can only access their own data
    match /game_progress/{userId} {
      // Users can read/write their own progress data
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Allow access to the data subcollection
      match /data/{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Users collection for future use (if needed for user profiles, etc.)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
